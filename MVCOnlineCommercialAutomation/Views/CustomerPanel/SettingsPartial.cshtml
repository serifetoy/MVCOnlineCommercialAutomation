@model MVCOnlineCommercialAutomation.Models.Classes.Customer

@using (Html.BeginForm("CustomerSettingsUpdate", "CustomerPanel", FormMethod.Post))
{
    @Html.HiddenFor(x => x.CustomerId)
    <form class="form-horizontal">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Surname</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerSurname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CustomerPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> I agree to change my password
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Submit</button>
            </div>
        </div>
    </form>
}